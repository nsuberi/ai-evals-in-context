# AI Testing Resource - Environment Variables

# Required: Anthropic API key for AI features
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Flask settings
FLASK_DEBUG=True
FLASK_HOST=127.0.0.1
FLASK_PORT=5000
SECRET_KEY=change-this-in-production

# Chroma vector store path
CHROMA_PATH=./chroma_db

# Anthropic model settings (optional)
ANTHROPIC_MODEL=claude-sonnet-4-20250514

# Embedding model (local sentence-transformers, no API key needed)
EMBEDDING_MODEL=all-MiniLM-L6-v2
